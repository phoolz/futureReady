@model FutureReady.Models.School.Supervisor

@{
    ViewData["Title"] = "Delete Supervisor";
}

<h1>Delete Supervisor</h1>

<div class="alert alert-danger" role="alert">
    <h4 class="alert-heading">Are you sure you want to delete this supervisor?</h4>
    <p>This action cannot be undone.</p>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">Supervisor Details</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Name</dt>
                    <dd class="col-sm-8">@Model.FullName</dd>

                    <dt class="col-sm-4">Company</dt>
                    <dd class="col-sm-8">@Model.Company?.Name</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.JobTitle)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.JobTitle)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Email)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Phone)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Phone)</dd>
                </dl>
            </div>
        </div>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
