@model FutureReady.Models.School.StudentMedicalCondition
@using FutureReady.Models.School

@{
    ViewData["Title"] = "Add Medical Condition";
    var student = ViewData["Student"] as Student;
    var studentId = ViewData["StudentId"];
    var conditionTypes = ViewData["ConditionTypes"] as string[];
}

<div class="page-header">
    <h1 class="page-title">Add Medical Condition</h1>
    <p class="page-subtitle">for @student?.FullName</p>
</div>

<div class="form-container">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

        <input type="hidden" asp-for="StudentId" />

        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="ConditionType" class="form-label"></label>
                <select asp-for="ConditionType" class="form-select">
                    <option value="">Select Condition Type</option>
                    @if (conditionTypes != null)
                    {
                        @foreach (var type in conditionTypes)
                        {
                            <option value="@type">@MedicalConditionTypes.GetDisplayName(type)</option>
                        }
                    }
                </select>
                <span asp-validation-for="ConditionType" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12 mb-3">
                <label asp-for="Details" class="form-label"></label>
                <textarea asp-for="Details" class="form-control" rows="4" placeholder="Enter details about the condition, including any specific instructions or medications..."></textarea>
                <span asp-validation-for="Details" class="text-danger"></span>
            </div>
        </div>

        <div class="d-flex gap-2 mt-4">
            <button type="submit" class="btn btn-primary">Add Condition</button>
            <a asp-action="Index" asp-route-id="@studentId" class="btn btn-outline-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
