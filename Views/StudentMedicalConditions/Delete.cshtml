@model FutureReady.Models.School.StudentMedicalCondition
@using FutureReady.Models.School

@{
    ViewData["Title"] = "Delete Medical Condition";
}

<div class="page-header">
    <h1 class="page-title">Delete Medical Condition</h1>
    <p class="page-subtitle">Confirm deletion</p>
</div>

<div class="details-container">
    <div class="alert alert-warning mb-4">
        <strong>Warning:</strong> Are you sure you want to delete this medical condition? This action cannot be undone.
    </div>

    <dl class="row">
        <dt class="col-sm-3">Condition Type</dt>
        <dd class="col-sm-9">
            <span class="badge bg-info">@MedicalConditionTypes.GetDisplayName(Model.ConditionType)</span>
        </dd>

        <dt class="col-sm-3">Details</dt>
        <dd class="col-sm-9">@(Model.Details ?? "N/A")</dd>

        <dt class="col-sm-3">Student</dt>
        <dd class="col-sm-9">@Model.Student?.FullName</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-danger">Delete Condition</button>
            <a asp-action="Index" asp-route-id="@Model.StudentId" class="btn btn-outline-secondary">Cancel</a>
        </div>
    </form>
</div>
