@model IEnumerable<FutureReady.Controllers.UserIndexViewModel>

@{
    ViewData["Title"] = "Users";
}

<h1>Users</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New User</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>UserName</th>
            <th>DisplayName</th>
            <th>Email</th>
            <th>Role</th>
            <th>IsActive</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.User.UserName</td>
            <td>@item.User.DisplayName</td>
            <td>@item.User.Email</td>
            <td>@item.RoleName</td>
            <td>@item.User.IsActive</td>
            <td>
                <a class="btn btn-sm btn-secondary" asp-action="Edit" asp-route-id="@item.User.Id">Edit</a>
                <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.User.Id">Details</a>
                <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.User.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
