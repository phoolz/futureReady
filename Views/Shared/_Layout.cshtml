<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FutureReady</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FutureReady.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="app-container">
        @await Html.PartialAsync("_Sidebar")

        <div class="main-wrapper">
            <header class="main-header d-lg-none">
                <button class="hamburger-btn" type="button" onclick="toggleSidebar()">
                    <span class="hamburger-icon">â˜°</span>
                </button>
                <span class="header-title">FutureReady</span>
            </header>

            <main class="main-content">
                @RenderBody()
            </main>

            <footer class="main-footer text-muted">
                <div class="container-fluid">
                    &copy; 2025 - FutureReady - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </div>
            </footer>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        function toggleSidebar() {
            document.getElementById('sidebar').classList.toggle('show');
            document.querySelector('.sidebar-overlay').classList.toggle('show');
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
