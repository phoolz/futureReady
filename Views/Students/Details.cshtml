@model FutureReady.Models.School.Student

@{
    ViewData["Title"] = "Student Details";
}

<div class="page-header">
    <h1 class="page-title">Student Details</h1>
    <p class="page-subtitle">@Model.FullName</p>
</div>

<div class="details-container">
    <h5 class="mb-3">Personal Information</h5>
    <dl class="row">
        <dt class="col-sm-3">First Name</dt>
        <dd class="col-sm-9">@Model.FirstName</dd>

        <dt class="col-sm-3">Last Name</dt>
        <dd class="col-sm-9">@Model.LastName</dd>

        <dt class="col-sm-3">Preferred Name</dt>
        <dd class="col-sm-9">@(Model.PreferredName ?? "N/A")</dd>

        <dt class="col-sm-3">Date of Birth</dt>
        <dd class="col-sm-9">@(Model.DateOfBirth?.ToString("d MMMM yyyy") ?? "N/A")</dd>

        <dt class="col-sm-3">Student Number</dt>
        <dd class="col-sm-9">@(Model.StudentNumber ?? "N/A")</dd>

        <dt class="col-sm-3">Phone</dt>
        <dd class="col-sm-9">@(Model.Phone ?? "N/A")</dd>
    </dl>

    <hr class="my-4" />

    <h5 class="mb-3">Academic Information</h5>
    <dl class="row">
        <dt class="col-sm-3">Student Type</dt>
        <dd class="col-sm-9">@(Model.StudentType ?? "N/A")</dd>

        <dt class="col-sm-3">Year Level</dt>
        <dd class="col-sm-9">@(Model.YearLevel ?? "N/A")</dd>

        <dt class="col-sm-3">Graduation Year</dt>
        <dd class="col-sm-9">@(Model.GraduationYear?.ToString() ?? "N/A")</dd>

        <dt class="col-sm-3">Medicare Number</dt>
        <dd class="col-sm-9">@(Model.MedicareNumber ?? "N/A")</dd>
    </dl>

    <hr class="my-4" />

    <h5 class="mb-3">Related Information</h5>
    <div class="d-flex gap-2">
        <a asp-controller="EmergencyContacts" asp-action="Index" asp-route-id="@Model.Id" class="btn btn-outline-primary">
            View Emergency Contacts
        </a>
    </div>

    <div class="d-flex gap-2 mt-4">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
        <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
    </div>
</div>
