@model FutureReady.Models.School.Student

@{
    ViewData["Title"] = "Student Details";
    var placements = ViewData["Placements"] as List<FutureReady.Models.School.Placement> ?? new List<FutureReady.Models.School.Placement>();
}

<div class="d-flex justify-content-between align-items-start mb-4">
    <div class="page-header mb-0">
        <h1 class="page-title">Student Details</h1>
        <p class="page-subtitle">@Model.FullName</p>
    </div>
    <div class="d-flex gap-2">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
            <i class="bi bi-pencil"></i> Edit
        </a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">
            <i class="bi bi-trash"></i> Delete
        </a>
    </div>
</div>

<div class="details-container">
    <h5 class="mb-3">Personal Information</h5>
    <dl class="row">
        <dt class="col-sm-3">First Name</dt>
        <dd class="col-sm-9">@Model.FirstName</dd>

        <dt class="col-sm-3">Last Name</dt>
        <dd class="col-sm-9">@Model.LastName</dd>

        <dt class="col-sm-3">Preferred Name</dt>
        <dd class="col-sm-9">@(Model.PreferredName ?? "N/A")</dd>

        <dt class="col-sm-3">Date of Birth</dt>
        <dd class="col-sm-9">@(Model.DateOfBirth?.ToString("d MMMM yyyy") ?? "N/A")</dd>

        <dt class="col-sm-3">Student Number</dt>
        <dd class="col-sm-9">@(Model.StudentNumber ?? "N/A")</dd>

        <dt class="col-sm-3">Phone</dt>
        <dd class="col-sm-9">@(Model.Phone ?? "N/A")</dd>
    </dl>

    <hr class="my-4" />

    <h5 class="mb-3">Academic Information</h5>
    <dl class="row">
        <dt class="col-sm-3">Student Type</dt>
        <dd class="col-sm-9">@(Model.StudentType ?? "N/A")</dd>

        <dt class="col-sm-3">Year Level</dt>
        <dd class="col-sm-9">@(Model.YearLevel ?? "N/A")</dd>

        <dt class="col-sm-3">Graduation Year</dt>
        <dd class="col-sm-9">@(Model.GraduationYear?.ToString() ?? "N/A")</dd>

        <dt class="col-sm-3">Medicare Number</dt>
        <dd class="col-sm-9">@(Model.MedicareNumber ?? "N/A")</dd>
    </dl>

    <hr class="my-4" />

    <h5 class="mb-3">Placements</h5>
    @if (placements.Any())
    {
        <div class="table-responsive">
            <table class="table table-sm">
                <thead>
                    <tr>
                        <th>Year</th>
                        <th>Company</th>
                        <th>Supervisor</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var placement in placements)
                    {
                        var statusClass = placement.Status switch
                        {
                            "confirmed" => "bg-success",
                            "pending_employer" => "bg-warning text-dark",
                            "pending_parent" => "bg-info",
                            _ => "bg-secondary"
                        };
                        <tr>
                            <td>@placement.Year</td>
                            <td>@(placement.Company?.Name ?? "Not assigned")</td>
                            <td>@(placement.Supervisor != null ? $"{placement.Supervisor.FirstName} {placement.Supervisor.LastName}" : "Not assigned")</td>
                            <td><span class="badge @statusClass">@placement.Status</span></td>
                            <td>
                                <a asp-controller="Placements" asp-action="Details" asp-route-id="@placement.Id" class="btn btn-sm btn-outline-primary">
                                    View Details
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p class="text-muted">No placements found for this student.</p>
    }
    <a asp-controller="Placements" asp-action="Create" class="btn btn-sm btn-success">
        <i class="bi bi-plus"></i> Add Placement
    </a>

    <hr class="my-4" />

    <h5 class="mb-3">Related Information</h5>
    <div class="d-flex gap-2">
        <a asp-controller="EmergencyContacts" asp-action="Index" asp-route-id="@Model.Id" class="btn btn-outline-primary">
            View Emergency Contacts
        </a>
        <a asp-controller="StudentMedicalConditions" asp-action="Index" asp-route-id="@Model.Id" class="btn btn-outline-primary">
            View Medical Conditions
        </a>
    </div>

    </div>
