@model FutureReady.Models.School.Student

@{
    ViewData["Title"] = "Delete Student";
}

<div class="page-header">
    <h1 class="page-title">Delete Student</h1>
    <p class="page-subtitle">Confirm student deletion</p>
</div>

<div class="details-container">
    <div class="alert alert-warning mb-4">
        <strong>Warning:</strong> Are you sure you want to delete <strong>@Model.FullName</strong>? This action cannot be undone.
    </div>

    <dl class="row">
        <dt class="col-sm-3">Name</dt>
        <dd class="col-sm-9">@Model.FullName</dd>

        <dt class="col-sm-3">Student Number</dt>
        <dd class="col-sm-9">@(Model.StudentNumber ?? "N/A")</dd>

        <dt class="col-sm-3">Year Level</dt>
        <dd class="col-sm-9">@(Model.YearLevel ?? "N/A")</dd>

        <dt class="col-sm-3">Graduation Year</dt>
        <dd class="col-sm-9">@(Model.GraduationYear?.ToString() ?? "N/A")</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-danger">Delete Student</button>
            <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
        </div>
    </form>
</div>
