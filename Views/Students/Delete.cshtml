@model FutureReady.Models.School.Student

@{
    ViewData["Title"] = "Delete Student";
}

<div class="page-header">
    <h1 class="page-title">Delete Student</h1>
    <p class="page-subtitle">Confirm student deletion</p>
</div>

<div class="details-container">
    <div class="alert alert-warning mb-4">
        <strong>Warning:</strong> Are you sure you want to delete this student? This action cannot be undone.
    </div>

    <dl>
        <dt>Medicare Number</dt>
        <dd>@Model.MedicareNumber</dd>

        <dt>Student Type</dt>
        <dd>@Model.StudentType</dd>

        <dt>Cohort</dt>
        <dd>@Model.Cohort?.GraduationYear @(Model.Cohort != null ? $"/ {Model.Cohort.GraduationMonth}" : "N/A")</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-danger">Delete Student</button>
            <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
        </div>
    </form>
</div>
