@model FutureReady.Models.School.Cohort

@{
    ViewData["Title"] = "Cohort Details";
}

<div class="page-header">
    <h1 class="page-title">Cohort Details</h1>
    <p class="page-subtitle">@Model.Name</p>
</div>

<div class="details-container">
    <dl class="row">
        <dt class="col-sm-3">Name</dt>
        <dd class="col-sm-9">@Model.Name</dd>

        <dt class="col-sm-3">School</dt>
        <dd class="col-sm-9">@Model.School?.Name</dd>

        <dt class="col-sm-3">Graduation Year</dt>
        <dd class="col-sm-9">@Model.GraduationYear</dd>

        <dt class="col-sm-3">Graduation Month</dt>
        <dd class="col-sm-9">@Model.GraduationMonth</dd>
    </dl>

    <div class="d-flex gap-2">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
        <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
    </div>
</div>
