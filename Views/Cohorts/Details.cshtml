@model FutureReady.Models.School.Cohort

@{
    ViewData["Title"] = "Cohort Details";
}

<div class="page-header">
    <h1 class="page-title">Cohort Details</h1>
    <p class="page-subtitle">View cohort information</p>
</div>

<div class="details-container">
    <dl>
        <dt>School</dt>
        <dd>@Model.School?.Name</dd>

        <dt>Graduation Year</dt>
        <dd>@Model.GraduationYear</dd>

        <dt>Graduation Month</dt>
        <dd>@Model.GraduationMonth</dd>
    </dl>

    <div class="d-flex gap-2">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
        <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
    </div>
</div>
