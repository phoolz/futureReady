@model FutureReady.Models.School.Cohort

@{
    ViewData["Title"] = "Delete Cohort";
}

<div class="page-header">
    <h1 class="page-title">Delete Cohort</h1>
    <p class="page-subtitle">Confirm cohort deletion</p>
</div>

<div class="details-container">
    <div class="alert alert-warning mb-4">
        <strong>Warning:</strong> Are you sure you want to delete this cohort? This action cannot be undone.
    </div>

    <dl>
        <dt>School</dt>
        <dd>@Model.School?.Name</dd>

        <dt>Graduation Year</dt>
        <dd>@Model.GraduationYear</dd>

        <dt>Graduation Month</dt>
        <dd>@Model.GraduationMonth</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-danger">Delete Cohort</button>
            <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
        </div>
    </form>
</div>
