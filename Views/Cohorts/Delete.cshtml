@model FutureReady.Models.School.Cohort

@{
    ViewData["Title"] = "Delete Cohort";
}

<div class="page-header">
    <h1 class="page-title">Delete Cohort</h1>
    <p class="page-subtitle">Confirm cohort deletion</p>
</div>

<div class="details-container">
    <div class="alert alert-warning mb-4">
        <strong>Warning:</strong> Are you sure you want to delete <strong>@Model.Name</strong>? This action cannot be undone.
    </div>

    <dl class="row">
        <dt class="col-sm-3">Name</dt>
        <dd class="col-sm-9">@Model.Name</dd>

        <dt class="col-sm-3">School</dt>
        <dd class="col-sm-9">@Model.School?.Name</dd>

        <dt class="col-sm-3">Graduation</dt>
        <dd class="col-sm-9">@Model.GraduationMonth @Model.GraduationYear</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-danger">Delete Cohort</button>
            <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
        </div>
    </form>
</div>
