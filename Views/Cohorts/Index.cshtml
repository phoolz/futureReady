@model IEnumerable<FutureReady.Models.School.Cohort>

@{
    ViewData["Title"] = "Cohorts";
}

<div class="page-header">
    <h1 class="page-title">Cohorts</h1>
    <p class="page-subtitle">Manage graduation cohorts</p>
</div>

<div class="table-container">
    <div class="table-header">
        <h2 class="table-title">All Cohorts</h2>
        <div class="table-actions">
            <div class="search-box">
                <span class="search-icon">üîç</span>
                <input type="text" class="form-control" id="searchInput" placeholder="Search cohorts..." onkeyup="filterTable()">
            </div>
            <a asp-action="Create" class="btn btn-primary">+ Create Cohort</a>
        </div>
    </div>
    <table class="table" id="cohortsTable">
        <thead>
            <tr>
                <th>Name</th>
                <th>Graduation</th>
                <th>School</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Name</td>
                <td>@c.GraduationMonth @c.GraduationYear</td>
                <td>@c.School?.Name</td>
                <td>
                    <div class="action-buttons">
                        <a class="btn btn-sm btn-outline-secondary" asp-action="Edit" asp-route-id="@c.Id">Edit</a>
                        <a class="btn btn-sm btn-outline-info" asp-action="Details" asp-route-id="@c.Id">Details</a>
                        <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@c.Id">Delete</a>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>

@section Scripts {
<script>
    function filterTable() {
        var input = document.getElementById("searchInput");
        var filter = input.value.toLowerCase();
        var table = document.getElementById("cohortsTable");
        var rows = table.getElementsByTagName("tr");

        for (var i = 1; i < rows.length; i++) {
            var cells = rows[i].getElementsByTagName("td");
            var match = false;
            for (var j = 0; j < cells.length - 1; j++) {
                if (cells[j].textContent.toLowerCase().indexOf(filter) > -1) {
                    match = true;
                    break;
                }
            }
            rows[i].style.display = match ? "" : "none";
        }
    }
</script>
}
