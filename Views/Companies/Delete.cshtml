@model FutureReady.Models.School.Company

@{
    ViewData["Title"] = "Delete Company";
}

<h1>Delete Company</h1>

<div class="alert alert-danger" role="alert">
    <h4 class="alert-heading">Are you sure you want to delete this company?</h4>
    <p>This action cannot be undone.</p>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">Company Details</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Name)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Industry)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Industry)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.City)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.City)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.State)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.State)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.PublicLiabilityInsurance5M)</dt>
                    <dd class="col-sm-8">
                        @if (Model.PublicLiabilityInsurance5M)
                        {
                            <span class="badge bg-success">Yes</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">No</span>
                        }
                    </dd>
                </dl>
            </div>
        </div>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
