@model FutureReady.Models.School.Company

@{
    ViewData["Title"] = "Company Details";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>@Model.Name</h1>
    <div class="d-flex gap-2">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
            <i class="bi bi-pencil"></i> Edit
        </a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">
            <i class="bi bi-trash"></i> Delete
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">Basic Information</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Name)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Industry)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Industry)</dd>
                </dl>
            </div>
        </div>

        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">Physical Address</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.StreetAddress)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.StreetAddress)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.StreetAddress2)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.StreetAddress2)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Suburb)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Suburb)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.City)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.City)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.State)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.State)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.PostalCode)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.PostalCode)</dd>
                </dl>
            </div>
        </div>

        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">Postal Address</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.PostalStreetAddress)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.PostalStreetAddress)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.PostalSuburb)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.PostalSuburb)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.PostalCity)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.PostalCity)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.PostalState)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.PostalState)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.PostalPostalCode)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.PostalPostalCode)</dd>
                </dl>
            </div>
        </div>

        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">Insurance & Experience</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.PublicLiabilityInsurance5M)</dt>
                    <dd class="col-sm-8">
                        @if (Model.PublicLiabilityInsurance5M)
                        {
                            <span class="badge bg-success">Yes</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">No</span>
                        }
                    </dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.InsuranceValue)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.InsuranceValue)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.HasPreviousWorkExperienceStudents)</dt>
                    <dd class="col-sm-8">
                        @if (Model.HasPreviousWorkExperienceStudents)
                        {
                            <span class="badge bg-success">Yes</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">No</span>
                        }
                    </dd>
                </dl>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Supervisors</h5>
                <a asp-controller="Supervisors" asp-action="Create" asp-route-companyId="@Model.Id" class="btn btn-sm btn-primary">
                    <i class="bi bi-plus-lg"></i> Add
                </a>
            </div>
            <div class="card-body">
                @{
                    var supervisors = ViewData["Supervisors"] as IEnumerable<FutureReady.Models.School.Supervisor>;
                }
                @if (supervisors != null && supervisors.Any())
                {
                    <ul class="list-group list-group-flush">
                        @foreach (var supervisor in supervisors)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-start">
                                <div>
                                    <div class="fw-bold">@($"{supervisor.FirstName} {supervisor.LastName}")</div>
                                    @if (!string.IsNullOrEmpty(supervisor.JobTitle))
                                    {
                                        <small class="text-muted">@supervisor.JobTitle</small>
                                    }
                                    @if (!string.IsNullOrEmpty(supervisor.Email))
                                    {
                                        <div><small>@supervisor.Email</small></div>
                                    }
                                    @if (!string.IsNullOrEmpty(supervisor.Phone))
                                    {
                                        <div><small>@supervisor.Phone</small></div>
                                    }
                                </div>
                                <a asp-controller="Supervisors" asp-action="Details" asp-route-id="@supervisor.Id" class="btn btn-sm btn-outline-secondary">
                                    View
                                </a>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p class="text-muted mb-0">No supervisors added yet.</p>
                }
            </div>
        </div>

        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">Placements</h5>
            </div>
            <div class="card-body">
                @{
                    var placements = ViewData["Placements"] as IEnumerable<FutureReady.Models.School.Placement>;
                }
                @if (placements != null && placements.Any())
                {
                    <ul class="list-group list-group-flush">
                        @foreach (var placement in placements)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-start">
                                <div>
                                    <div class="fw-bold">@placement.Student?.FirstName @placement.Student?.LastName</div>
                                    <small class="text-muted">@placement.Year</small>
                                    @if (placement.Supervisor != null)
                                    {
                                        <div><small>Supervisor: @placement.Supervisor.FirstName @placement.Supervisor.LastName</small></div>
                                    }
                                    <div>
                                        @if (placement.Status == "draft")
                                        {
                                            <span class="badge bg-secondary">Draft</span>
                                        }
                                        else if (placement.Status == "pending_parent")
                                        {
                                            <span class="badge bg-warning text-dark">Pending Parent</span>
                                        }
                                        else if (placement.Status == "pending_employer")
                                        {
                                            <span class="badge bg-warning text-dark">Pending Employer</span>
                                        }
                                        else if (placement.Status == "confirmed")
                                        {
                                            <span class="badge bg-success">Confirmed</span>
                                        }
                                    </div>
                                </div>
                                <a asp-controller="Placements" asp-action="Details" asp-route-id="@placement.Id" class="btn btn-sm btn-outline-secondary">
                                    View
                                </a>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p class="text-muted mb-0">No placements yet.</p>
                }
            </div>
        </div>
    </div>
</div>
