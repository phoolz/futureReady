@model FutureReady.Models.School.School

@{
    ViewData["Title"] = "Delete School";
}

<h1>Delete School</h1>

<h3>Are you sure you want to delete this school?</h3>

<div>
    <h4>School</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Tenant Key</dt>
        <dd class="col-sm-10">@Model.TenantKey</dd>

        <dt class="col-sm-2">Timezone</dt>
        <dd class="col-sm-10">@Model.Timezone</dd>

        <dt class="col-sm-2">Contact Email</dt>
        <dd class="col-sm-10">@(Model.ContactEmail ?? "N/A")</dd>

        <dt class="col-sm-2">Contact Phone</dt>
        <dd class="col-sm-10">@(Model.ContactPhone ?? "N/A")</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input asp-for="Id" type="hidden" />
    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>

