@model IEnumerable<FutureReady.Models.School.School>

@{
    ViewData["Title"] = "Schools";
}

<h1>Schools</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New School</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Tenant Key</th>
            <th>Timezone</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var s in Model)
    {
        <tr>
            <td>@s.Name</td>
            <td>@s.TenantKey</td>
            <td>@s.Timezone</td>
            <td>
                <a class="btn btn-sm btn-secondary" asp-action="Edit" asp-route-id="@s.Id">Edit</a>
                <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@s.Id">Details</a>
                <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@s.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>

