@{
    ViewData["Title"] = "Invalid Link";
    Layout = "_Layout";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body text-center py-5">
                    <div class="mb-4">
                        <i class="bi bi-x-circle text-danger" style="font-size: 4rem;"></i>
                    </div>
                    <h2 class="card-title">Invalid Link</h2>
                    <p class="card-text text-muted">
                        This parent permission form link is invalid or has already been used.
                    </p>
                    <p class="card-text text-muted">
                        Please contact the school to request a new form link.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
