@model FutureReady.Models.School.Placement
@{
    ViewData["Title"] = "Placement Details";
    var formTokens = ViewData["FormTokens"] as List<FutureReady.Models.School.FormToken> ?? new List<FutureReady.Models.School.FormToken>();
    var employerTokens = formTokens.Where(t => t.FormType == "employer_acceptance").ToList();
    var parentTokens = formTokens.Where(t => t.FormType == "parent_permission").ToList();
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Placement Details</h1>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
            <i class="bi bi-pencil"></i> Edit
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>

@if (TempData["FormLink"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>@TempData["FormLinkMessage"]</strong>
        <div class="mt-2">
            <input type="text" class="form-control" value="@TempData["FormLink"]" id="formLinkInput" readonly />
        </div>
        <div class="mt-2 d-flex gap-2">
            <button type="button" class="btn btn-sm btn-outline-light" onclick="navigator.clipboard.writeText(document.getElementById('formLinkInput').value)">
                <i class="bi bi-clipboard"></i> Copy to Clipboard
            </button>
            <a href="@TempData["FormLink"]" target="_blank" class="btn btn-sm btn-outline-light">
                <i class="bi bi-box-arrow-up-right"></i> Open In New Tab
            </a>
        </div>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ParentFormLink"] != null)
{
    <div class="alert alert-info alert-dismissible fade show" role="alert">
        <strong>@TempData["ParentFormLinkMessage"]</strong>
        <div class="mt-2">
            <input type="text" class="form-control" value="@TempData["ParentFormLink"]" id="parentFormLinkInput" readonly />
        </div>
        <div class="mt-2 d-flex gap-2">
            <button type="button" class="btn btn-sm btn-outline-light" onclick="navigator.clipboard.writeText(document.getElementById('parentFormLinkInput').value)">
                <i class="bi bi-clipboard"></i> Copy to Clipboard
            </button>
            <a href="@TempData["ParentFormLink"]" target="_blank" class="btn btn-sm btn-outline-light">
                <i class="bi bi-box-arrow-up-right"></i> Open In New Tab
            </a>
        </div>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row">
    <div class="col-md-8">
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">Placement Information</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Student</dt>
                    <dd class="col-sm-8">
                        @if (Model.Student != null)
                        {
                            @Model.Student.FirstName @Model.Student.LastName
                        }
                        else
                        {
                            <span class="text-muted">Not assigned</span>
                        }
                    </dd>

                    <dt class="col-sm-4">Company</dt>
                    <dd class="col-sm-8">
                        @if (Model.Company != null)
                        {
                            @Model.Company.Name
                        }
                        else
                        {
                            <span class="text-muted">Not assigned</span>
                        }
                    </dd>

                    <dt class="col-sm-4">Supervisor</dt>
                    <dd class="col-sm-8">
                        @if (Model.Supervisor != null)
                        {
                            @Model.Supervisor.FirstName @Model.Supervisor.LastName
                            @if (!string.IsNullOrEmpty(Model.Supervisor.Email))
                            {
                                <span class="text-muted">(@Model.Supervisor.Email)</span>
                            }
                        }
                        else
                        {
                            <span class="text-muted">Not assigned</span>
                        }
                    </dd>

                    <dt class="col-sm-4">Year</dt>
                    <dd class="col-sm-8">@Model.Year</dd>

                    <dt class="col-sm-4">Status</dt>
                    <dd class="col-sm-8">
                        @{
                            var statusClass = Model.Status switch
                            {
                                "confirmed" => "bg-success",
                                "pending_employer" => "bg-warning text-dark",
                                "pending_parent" => "bg-info",
                                _ => "bg-secondary"
                            };
                        }
                        <span class="badge @statusClass">@Model.Status</span>
                    </dd>
                </dl>
            </div>
        </div>

        @if (Model.DressRequirement != null || Model.WorkStartTime != null || Model.WorkEndTime != null)
        {
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Work Details</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        @if (Model.WorkStartTime != null || Model.WorkEndTime != null)
                        {
                            <dt class="col-sm-4">Work Hours</dt>
                            <dd class="col-sm-8">@Model.WorkStartTime - @Model.WorkEndTime</dd>
                        }

                        @if (Model.DressRequirement != null)
                        {
                            <dt class="col-sm-4">Dress Requirement</dt>
                            <dd class="col-sm-8">@Model.DressRequirement</dd>
                        }
                    </dl>
                </div>
            </div>
        }

        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Employer Form</h5>
                <div class="d-flex gap-2">
                    <a asp-action="EmployerFormReview" asp-route-id="@Model.Id" class="btn btn-outline-primary btn-sm">
                        <i class="bi bi-eye"></i> Review Submission
                    </a>
                    <form asp-action="SendEmployerForm" asp-route-id="@Model.Id" method="post" style="display:inline;">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-success btn-sm">
                            <i class="bi bi-envelope"></i> Generate Employer Form Link
                        </button>
                    </form>
                </div>
            </div>
            <div class="card-body">
                @if (Model.EmployerSubmittedAt.HasValue)
                {
                    <div class="alert alert-success mb-3">
                        <i class="bi bi-check-circle-fill"></i>
                        <strong>Form submitted</strong> on @Model.EmployerSubmittedAt.Value.ToString("d MMMM yyyy 'at' h:mm tt")
                        <a asp-action="EmployerFormReview" asp-route-id="@Model.Id" class="alert-link ms-2">View full submission</a>
                    </div>
                }
                else
                {
                    <div class="alert alert-warning mb-3">
                        <i class="bi bi-clock-fill"></i>
                        <strong>Awaiting submission</strong> - The employer has not yet completed the form.
                    </div>
                }

                @if (employerTokens.Any())
                {
                    <h6>Token History</h6>
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Created</th>
                                <th>Expires</th>
                                <th>Status</th>
                                <th>Email</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var token in employerTokens)
                            {
                                var isActive = token.UsedAt == null && token.ExpiresAt > DateTime.UtcNow;
                                <tr>
                                    <td>@token.CreatedAt.ToString("g")</td>
                                    <td>@token.ExpiresAt.ToString("g")</td>
                                    <td>
                                        @if (token.UsedAt != null)
                                        {
                                            <span class="badge bg-success">Used @token.UsedAt.Value.ToString("g")</span>
                                        }
                                        else if (token.ExpiresAt <= DateTime.UtcNow)
                                        {
                                            <span class="badge bg-secondary">Expired</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning text-dark">Pending</span>
                                        }
                                    </td>
                                    <td>@token.Email</td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            @if (isActive)
                                            {
                                                <form asp-action="ResendEmployerForm" method="post" style="display:inline;">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="id" value="@Model.Id" />
                                                    <input type="hidden" name="tokenId" value="@token.Id" />
                                                    <button type="submit" class="btn btn-outline-primary btn-sm" title="Revoke and generate new link">
                                                        <i class="bi bi-arrow-repeat"></i> Resend
                                                    </button>
                                                </form>
                                            }
                                            <form asp-action="DeleteEmployerFormToken" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this form token?');">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@Model.Id" />
                                                <input type="hidden" name="tokenId" value="@token.Id" />
                                                <button type="submit" class="btn btn-outline-danger btn-sm" title="Delete token">
                                                    <i class="bi bi-trash"></i> Delete
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p class="text-muted mb-0">No form links have been generated yet.</p>
                }
            </div>
        </div>

        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Parent Permission Form</h5>
                <div class="d-flex gap-2">
                    <form asp-action="SendParentForm" asp-route-id="@Model.Id" method="post" style="display:inline;">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-success btn-sm">
                            <i class="bi bi-envelope"></i> Generate Parent Form Link
                        </button>
                    </form>
                </div>
            </div>
            <div class="card-body">
                @if (Model.ParentSubmittedAt.HasValue)
                {
                    <div class="alert alert-success mb-3">
                        <i class="bi bi-check-circle-fill"></i>
                        <strong>Form submitted</strong> on @Model.ParentSubmittedAt.Value.ToString("d MMMM yyyy 'at' h:mm tt")
                    </div>
                }
                else
                {
                    <div class="alert alert-warning mb-3">
                        <i class="bi bi-clock-fill"></i>
                        <strong>Awaiting submission</strong> - The parent/guardian has not yet completed the form.
                    </div>
                }

                @if (parentTokens.Any())
                {
                    <h6>Token History</h6>
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Created</th>
                                <th>Expires</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var token in parentTokens)
                            {
                                var isActive = token.UsedAt == null && token.ExpiresAt > DateTime.UtcNow;
                                <tr>
                                    <td>@token.CreatedAt.ToString("g")</td>
                                    <td>@token.ExpiresAt.ToString("g")</td>
                                    <td>
                                        @if (token.UsedAt != null)
                                        {
                                            <span class="badge bg-success">Used @token.UsedAt.Value.ToString("g")</span>
                                        }
                                        else if (token.ExpiresAt <= DateTime.UtcNow)
                                        {
                                            <span class="badge bg-secondary">Expired</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning text-dark">Pending</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            @if (isActive)
                                            {
                                                <form asp-action="ResendParentForm" method="post" style="display:inline;">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="id" value="@Model.Id" />
                                                    <input type="hidden" name="tokenId" value="@token.Id" />
                                                    <button type="submit" class="btn btn-outline-primary btn-sm" title="Revoke and generate new link">
                                                        <i class="bi bi-arrow-repeat"></i> Resend
                                                    </button>
                                                </form>
                                            }
                                            <form asp-action="DeleteParentFormToken" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this form token?');">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@Model.Id" />
                                                <input type="hidden" name="tokenId" value="@token.Id" />
                                                <button type="submit" class="btn btn-outline-danger btn-sm" title="Delete token">
                                                    <i class="bi bi-trash"></i> Delete
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p class="text-muted mb-0">No parent form links have been generated yet.</p>
                }
            </div>
        </div>
    </div>
</div>
