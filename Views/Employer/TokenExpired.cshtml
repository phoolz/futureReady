@{
    ViewData["Title"] = "Link Expired";
    Layout = "_Layout";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body text-center py-5">
                    <div class="mb-4">
                        <i class="bi bi-clock-history text-warning" style="font-size: 4rem;"></i>
                    </div>
                    <h2 class="card-title">Link Expired</h2>
                    <p class="card-text text-muted">
                        This form link has expired.
                    </p>
                    <p class="card-text text-muted">
                        Form links are valid for 14 days. Please contact the school to request a new form link.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
